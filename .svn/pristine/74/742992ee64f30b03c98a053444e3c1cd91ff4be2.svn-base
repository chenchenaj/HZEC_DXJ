page {
	/* letter-spacing: 2rpx; */
	font-family: 'Microsoft YaHei';
}

image {
	display: block;
	width: 0;
	height: 0;
}

/* 视频删除 */
.delete1 {
	position: absolute;
	right: -30rpx;
	top: -30rpx;
	width: 45rpx;
	height: 45rpx;
	z-index: 999;
}

/* 字符字母不强行换行 */
.no_line_feed {
	word-break: break-all;
}

.font-color {
	color: #5786F7;
}

.un-font-color {
	color: #626262;
}

.font-weight {
	font-weight: bold;
}

.container {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: flex-start;
}

/* 自动水平浮动布局between */
.flex_row {
	display: flex;
	flex-flow: row wrap;
	justify-content: space-between;
}

/* 自动水平浮动布局 center */
.flex_row_center {
	display: flex;
	flex-flow: row wrap;
	justify-content: center;
}

/* 自动水平浮动布局 around */
.flex_row_around {
	display: flex;
	flex-flow: row wrap;
	justify-content: space-around;
}

/*  自动水平浮动布局 start */
.flex_row_start {
	display: flex;
	flex-flow: row wrap;
	justify-content: flex-start;
}

/* 高层级透明定位 */
.full_abs_top {
	position: absolute;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	opacity: 0;
	z-index: 99
}

/* 低层级不透明定位 */
.full_abs_down {
	position: absolute;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	opacity: 1;
	z-index: -1
}

/* 页面绝对定位fixed */
.full_fix {
	position: fixed;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
}

/* 透明度 */
.transparent {
	opacity: 0;
}

/* 边框 */
.border {
	border: 1rpx solid red;
}

