/* text */
/* 1行文本溢出省略 */
.line1 {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

/* 2行文本溢出省略 */
.line2 {
	overflow: hidden;
	text-overflow: ellipsis;
	display: box;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}

/* 3行文本溢出省略 */
.line3 {
	overflow: hidden;
	text-overflow: ellipsis;
	display: box;
	display: -webkit-box;
	-webkit-line-clamp: 3;
	-webkit-box-orient: vertical;
}

/* 阴影 */
.nshadow {
	box-shadow: 0rpx 0rpx 20rpx rgba(0, 0, 0, 0.25);
}
